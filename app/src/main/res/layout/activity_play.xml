<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/ll_background_color"
    android:padding="@dimen/ap_ll_global_padding"
    tools:context=".activities.PlayActivity">

    <!-- LinearLayout for the team name definition. -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ap_team_name"
            android:textColor="@color/black"
            android:textSize="@dimen/ap_tv_text_size"
            android:fontFamily="sans-serif"
            android:padding="@dimen/ap_tv_padding" />

        <EditText
            android:id="@+id/etTeamName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/ap_et_hint_insert_team_name"
            android:inputType="text"
            android:textSize="@dimen/ap_et_text_size"
            android:importantForAutofill="no" />

    </LinearLayout>

    <!-- LinearLayout to display all the players. -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:background="@drawable/linear_layout_background"
        android:padding="@dimen/as_ll_score_information_padding"
        android:layout_marginTop="@dimen/ap_ll_players_margin_top"
        android:layout_marginBottom="@dimen/ap_ll_players_margin_bottom">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ap_tv_players"
            android:textColor="@color/black"
            android:textSize="@dimen/ap_tv_players_text_size"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:padding="@dimen/ap_tv_players_padding"
            android:layout_marginTop="@dimen/ap_tv_players_margin_top"
            android:layout_marginBottom="@dimen/ap_tv_players_margin_bottom" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/llPlayers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <!-- LinearLayout to display the start game button. -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnStartGame"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/menu_buttons"
            android:text="@string/ap_btn_start_game"
            android:textColor="@color/black"
            android:textSize="@dimen/ap_btn_text_size"
            android:paddingHorizontal="@dimen/ap_btn_padding_horizontal"/>

    </LinearLayout>

</LinearLayout>