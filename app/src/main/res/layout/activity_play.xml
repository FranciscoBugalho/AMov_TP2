<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ll_background_color"
    android:orientation="vertical"
    tools:context=".activities.PlayActivity">

    <!-- FrameLayout to display all the content. -->
    <FrameLayout
        android:id="@+id/flMap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Fragment to display the map. -->
        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="FragmentTagUsage" />

        <!-- LinearLayout for the time. -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- TextView for the timer. -->
            <TextView
                android:id="@+id/tvTimer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/ap_tv_timer_padding"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/ap_tv_timer_text_size" />

        </LinearLayout>

        <!-- LinearLayout for two players information. -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="@dimen/ap_ll_information_margin_horizontal"
            android:layout_marginBottom="@dimen/ap_ll_information_margin_bottom"
            android:background="@drawable/linear_layout_background"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <!-- LinearLayout for the first player information. -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/ap_ll_first_player_margin_end"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- TextView to display the first player information. -->
                <TextView
                    android:id="@+id/tvInfoPlayerX"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/ap_tv_players_information_padding"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/ap_tv_players_information_text_size" />

            </LinearLayout>

            <!-- LinearLayout for the second player information. -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/ap_ll_second_player_margin_start"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- TextView to display the second player information. -->
                <TextView
                    android:id="@+id/tvInfoPlayerY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/ap_tv_players_information_padding"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/ap_tv_players_information_text_size" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>